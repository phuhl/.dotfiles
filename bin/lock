#!/bin/bash
lock1 (){
    running=$(pidof i3lock)
    if [ ! $running ]; then
        dolock &
        sleep 1
        xset dpms force suspend
    fi
}

dolock (){
    xset dpms 10 10
    keyboardSetMine
    keyboardStatus
    i3lock -i "$HOME/.dotfiles/misc/lock.png" -c "000000"  -n
    xset dpms 0 0
    screensaverStatus
}

quitBspc () {
    for window_id in $(bspc query -W); do
	      bspc window $window_id -c
    done
    bspc quit
}

case "$1" in
    lock)
	lock1
	;;
    logout)
	bspc quit
	logout
	;;
    suspend)
	lock1 && systemctl suspend
	;;
    hibernate)
	lock1 && systemctl hibernate
	;;
    reboot)
	systemctl reboot
	;;
    shutdown)
	systemctl poweroff
	;;
    *)
	echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
	exit 2
esac

exit 0
