#!/bin/bash

lock (){
    running=$(pidof swaylock)
    if [ ! $running ]; then
        if [ "$wm" = "niri" ]; then
            lockniri &
        else
            dolock &
        fi
        sleep 1
    fi
}

dolock (){
    swayidle -w timeout 10 'wlopm --off "*"' resume 'wlopm --on "*"' &
    SWAYIDLE_PID=$!
    hyprlock
    kill $SWAYIDLE_PID
}

lockniri (){
    swayidle -w timeout 10 'niri msg action power-off-monitors' &
    SWAYIDLE_PID=$!
    hyprlock
    kill $SWAYIDLE_PID
}

case "$1" in
    lock)
	lock
	;;
  lock-niri)
  wm="niri"
	lock
	;;
    *)
	echo "Usage: $0 {lock}|{lock-niri}"
	exit 2
esac

exit 0
